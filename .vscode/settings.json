{
  // Editor ___________________________________________________________________
  "editor.accessibilitySupport" : "off",
  "editor.fontFamily" : "Fira Code",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.renderWhitespace": "boundary",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.linkedEditing": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true
  },

  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.fontAliasing": "antialiased",
  "workbench.list.smoothScrolling": true,
  "workbench.preferredDarkColorTheme": "One Dark Pro Darker",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 12,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,


  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },

  "window.nativeTabs": true,
  "window.autoDetectColorScheme": true,

  "extensions.autoUpdate": "onlyEnabledExtensions",

  "files.eol": "\n",
  "files.insertFinalNewline": true,

  "git.autofetch": true,
  "git.untrackedChanges": "separate",

  "diffEditor.ignoreTrimWhitespace": false,
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.next": true,
    "**/.output": true,
    "**/dist/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn-lock.json": true
  },

  "emmet.showSuggestionsAsSnippets": true,
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  // _____________________________________________________________________________




  // -------------- Extensions ----------------------------------------------------
  //    - ESLint
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },

  //    - Code Spell Checker
  "cSpell.language": "en-GB,es",
  "cSpell.ignoreRegExpList": [
    "pre\\w+"
  ],
  "cSpell.userWords": [
    "astrojs",
    "CHECKIN",
    "chempo",
    "Chempo",
    "codegen",
    "codegens",
    "commitlint",
    "copyfiles",
    "crazit",
    "daisyui",
    "DATALAYER",
    "deepmerge",
    "defaultify",
    "didomi",
    "Didomi",
    "ecommerce",
    "execa",
    "Fira",
    "hocs",
    "linebreak",
    "melia",
    "Melia",
    "Meli√°",
    "modernizr",
    "multifactor",
    "Multifactor",
    "nextgen",
    "nextjs",
    "predev",
    "recaptcha",
    "rpin",
    "tailwindcss"
  ],
  "cSpell.allowedSchemas": [
    "file",
    "gist",
    "sftp",
    "untitled",
    "vscode-notebook-cell",
    "file!package.json"
  ],

  //    - Error Lens
  "errorLens.delay": 500,
  "errorLens.fontSize": "0.8em",
  "errorLens.fontStyleItalic": true,
  "errorLens.messageTemplate": "$source --- $message",
  "errorLens.messageBackgroundMode": "message",
  "errorLens.gutterIconsEnabled": true,
  "errorLens.statusBarIconsEnabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "javascript.inlayHints.parameterNames.enabled": "all",
  "auto-close-tag.disableOnLanguage": [
    "typescript"
  ],

  //    - PostCSS
  "postcss.validate": false,

  //    - XML
  "redhat.telemetry.enabled": false,
  "editor.inlineSuggest.enabled": true,

  //    - Copilot
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": false,
    "yaml": false
  }
}
